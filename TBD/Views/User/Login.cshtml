
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div id="page-wrapper" style="width: 100%;">
    <div id="page-container" style="height: 80%;">
        <div>
            <div class="form-body card">
                <form method="post" action="login" class="form" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <div class="form-icon" style="background: #28B779"><i class="mdi mdi-account-key"></i></div>
                        <input type="text" class="form-control" name="login" placeholder="Login" required>
                    </div>
                    <div class="form-group">
                        <div class="form-icon" style="background: #FFB848"><i class="mdi mdi-pencil-lock"></i></div>
                        <input type="password" class="form-control" name="password" placeholder="Hasło" required>
                    </div>
                    <hr class="form-line">
                    <div class="form-button-container">
                        <button type="submit" class="btn btn-primary form-button">Zaloguj</button>
                    </div>
                </form>
            </div>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div style="background: lightcoral; width: 100%; height: 35px; border-style: solid; border-color: lightgray; border-width: 1px; border-radius: 2px; text-align: center; line-height: 35px; font-size: 18px">
                    @ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage
                </div>
            }
            else
            {
                <div style="width: 100%; height: 35px;">
                </div>
            }
        </div>
    </div>
</div>
