@using Microsoft.AspNetCore.Html
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section Scripts{
    <script src="~/js/navigation.js"></script>
}
@functions {
    IHtmlContent GetButtonConfig(string controller, string classActive, string classInactive)
    {
        return Html.Raw(((ViewContext.RouteData.Values["controller"].ToString() == controller) ? "class=\"" + classActive + " " + classInactive + "\"" : "class=\"" + classInactive + "\"") + " onclick=\"changePage('" + Url.Action("Index", controller) + "', this.id);\"");
    }
}

<div id="sidebar">
    <a id="logo" href="/">
        <b id="logo-icon">
            <i class="mdi mdi-home"></i>
        </b>
        <span id="logo-text">
            Asylum
        </span>
    </a>
    <nav id="navbar2">
        <ul id="navbar">
            <li class="navbar-item">

                <div id="homeTabButton" @GetButtonConfig( "Home", "navbar-link-active navbar-link", "navbar-link") aria-expanded="false">
                    <div class="navbar-icon"><i class="mdi mdi-view-dashboard"></i></div><span class="navbar-text">Strona Główna</span>
                </div>
            </li>
            <li class="navbar-item">

                <div id="energyTabButton" @GetButtonConfig( "Energy", "navbar-link-active navbar-link", "navbar-link") aria-expanded="false">
                    <div class="navbar-icon"><i class="fas fa-bolt"></i></div><span class="navbar-text">Energia</span>
                </div>
            </li>
            <li class="navbar-item">

                <div id="blindTabButton" @GetButtonConfig( "Blind", "navbar-link-active navbar-link", "navbar-link") aria-expanded="false">
                    <div class="navbar-icon"><i class="mdi mdi-blinds"></i></div><span class="navbar-text">Rolety</span>
                </div>
            </li>
            <li class="navbar-item">

                <div id="meteoTabButton" @GetButtonConfig( "Meteo", "navbar-link-active navbar-link", "navbar-link") aria-expanded="false">
                    <div class="navbar-icon"><i class="mdi mdi-thermometer-lines"></i></div><span class="navbar-text">Stacja meteo</span>
                </div>
            </li>
        </ul>
    </nav>
</div>
<div id="page-wrapper">
    <header id="topbar">
        <div id="adminTabButton" @GetButtonConfig("Admin", "navbar-link topbar-button navbar-link-active", "navbar-link topbar-button")>Panel administracyjny</div>
        <div id="settingsTabButton" @GetButtonConfig("Setting", "navbar-link topbar-button navbar-link-active", "navbar-link topbar-button")>Ustawienia</div>
        <a href="@Url.Action("Logout","User")"><div id="logoutTabButton" class="navbar-link topbar-button" style="background: #991900; padding-top: 5px; padding-bottom: 5px;" )>Wyloguj</div></a>
    </header>
    <div id="page-breadcrumb">
    </div>
    <div id="page-container">
        @RenderBody()
    </div>
    <footer class="footer text-center">
        Ostatnia aktualizacja strony:
    </footer>
</div>